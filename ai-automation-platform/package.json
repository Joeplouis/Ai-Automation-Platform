{
  "name": "ai-automation-platform",
  "version": "1.0.0",
  "description": "Comprehensive AI automation platform for VPS management, N8N workflows, WordPress, Postiz social media, and affiliate marketing",
  "type": "module",
  "main": "src/core/server.js",
  "scripts": {
    "start": "node src/core/server.js",
    "dev": "nodemon src/core/server.js",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "build": "npm run lint && npm run test",
    "docker:build": "docker build -t ai-automation-platform .",
    "docker:run": "docker run -p 8080:8080 --env-file .env ai-automation-platform"
  },
  "keywords": [
    "ai",
    "automation",
    "vps",
    "n8n",
    "wordpress",
    "postiz",
    "affiliate-marketing",
    "workflow",
    "llm",
    "chatbot"
  ],
  "author": "BookAI Studio",
  "license": "MIT",
  "dependencies": {
    "@langchain/anthropic": "^0.3.26",
    "@langchain/cohere": "^0.3.4",
    "@langchain/community": "^0.3.50",
    "@langchain/core": "^0.3.70",
    "@langchain/google-genai": "^0.2.16",
    "@langchain/openai": "^0.6.7",
    "@modelcontextprotocol/sdk": "^1.17.2",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.0.0-rc.12",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "langchain": "^0.3.30",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "pino": "^9.3.2",
    "pino-http": "^10.5.0",
    "pino-pretty": "^13.1.1",
    "prom-client": "^15.0.0",
    "puppeteer": "^21.5.2",
    "redis": "^4.6.10",
    "sharp": "^0.32.6",
    "ssh2-promise": "^1.0.3",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "pg-mem": "^3.0.5",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bookaistudio/ai-automation-platform.git"
  },
  "bugs": {
    "url": "https://github.com/bookaistudio/ai-automation-platform/issues"
  },
  "homepage": "https://github.com/bookaistudio/ai-automation-platform#readme",
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "transform": {},
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "verbose": false,
    "setupFilesAfterEnv": [
      "<rootDir>/tests/jest-global-setup.js"
    ],
    "moduleNameMapper": {
      "^@modelcontextprotocol/sdk/server/index.js$": "<rootDir>/tests/mocks/mcp-sdk-server/index.js",
      "^@modelcontextprotocol/sdk/server/stdio.js$": "<rootDir>/tests/mocks/mcp-sdk-server/index.js",
      "^@modelcontextprotocol/sdk/types.js$": "<rootDir>/tests/mocks/mcp-sdk-types.js",
      "^pg$": "<rootDir>/tests/pg-mock.js"
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended",
      "prettier"
    ],
    "env": {
      "node": true,
      "es2022": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100
  }
}
