# BookAI Studio Base Environment Configuration
# This file is sourced by all installation scripts

# Domain Configuration
DOMAIN="bookaistudio.com"
CHAT_DOMAIN="chat.bookaistudio.com"
N8N_DOMAIN="n8n.bookaistudio.com"
WP_DOMAIN="wrp.bookaistudio.com"
POSTIZ_DOMAIN="postiz.bookaistudio.com"
OLLAMA_DOMAIN="ai.bookaistudio.com"
MAIL_DOMAIN="mail.bookaistudio.com"
MAUTIC_DOMAIN="mautic.bookaistudio.com"

# Admin Configuration
ADMIN_EMAIL="admin@bookaistudio.com"
TIMEZONE="America/New_York"

# SMTP Relay Configuration (optional)
USE_SMTP_RELAY="no"
RELAY_HOST=""
RELAY_PORT="587"
RELAY_USER=""
RELAY_PASS=""

# Installation Paths
INSTALL_DIR="/opt/bookai-studio"
LOG_DIR="/var/log/bookai-studio"
DATA_DIR="/opt/bookai-studio/data"

# Database Passwords
MAUTIC_DB_PASS="BookAI2024!Mautic"
N8N_DB_PASS="BookAI2024!N8N"

# N8N Configuration
N8N_BASIC_USER="admin"
N8N_BASIC_PASS="BookAI2024!N8N"

# System Configuration
VPS_IP="168.231.74.188"
DEBIAN_FRONTEND=noninteractive
export DOMAIN CHAT_DOMAIN N8N_DOMAIN WP_DOMAIN POSTIZ_DOMAIN OLLAMA_DOMAIN MAIL_DOMAIN MAUTIC_DOMAIN
export ADMIN_EMAIL TIMEZONE INSTALL_DIR LOG_DIR DATA_DIR DEBIAN_FRONTEND VPS_IP
export USE_SMTP_RELAY RELAY_HOST RELAY_PORT RELAY_USER RELAY_PASS
export MAUTIC_DB_PASS N8N_DB_PASS N8N_BASIC_USER N8N_BASIC_PASS
