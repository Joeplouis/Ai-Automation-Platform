{
  "name": "ai-automation-platform",
  "version": "2.0.0",
  "description": "Comprehensive AI automation platform with MCP server, LangChain agents, VPS management, and multi-agent orchestration",
  "main": "src/core/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/core/server.js",
    "dev": "nodemon src/core/server.js",
    "mcp": "node src/core/enhanced-mcp-server.js",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "test": "jest",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "docker:build": "docker build -t ai-automation-platform .",
    "docker:run": "docker run -p 8080:8080 --env-file .env ai-automation-platform",
    "ollama:start": "ollama serve",
    "ollama:pull": "ollama pull llama2 && ollama pull codellama && ollama pull mistral && ollama pull neural-chat",
    "setup:ollama": "npm run ollama:pull",
    "agents:start": "node src/ai/langchain-agent-system.js",
    "full:start": "concurrently \"npm run mcp\" \"npm run start\" \"npm run ollama:start\""
  },
  "keywords": [
    "ai",
    "automation",
    "mcp",
    "langchain",
    "ollama",
    "vps",
    "n8n",
    "wordpress",
    "affiliate-marketing",
    "social-media",
    "multi-agent",
    "llm"
  ],
  "author": "BookAI Studio",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "node-fetch": "^3.3.2",
    "ssh2-promise": "^1.0.3",
    "multer": "^1.4.5-lts.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "joi": "^17.11.0",
    "uuid": "^9.0.1",
    "cron": "^3.1.6",
    "ws": "^8.14.2",
    "sharp": "^0.32.6",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "puppeteer": "^21.5.2",
    "nodemailer": "^6.9.7",

    "@modelcontextprotocol/sdk": "^0.4.0",
    
    "langchain": "^0.1.25",
    "@langchain/core": "^0.1.48",
    "@langchain/community": "^0.0.43",
    "@langchain/openai": "^0.0.19",
    "@langchain/anthropic": "^0.1.21",
    "@langchain/google-genai": "^0.0.11",
    "@langchain/cohere": "^0.0.4",
    "@langchain/ollama": "^0.0.1",
    
    "faiss-node": "^0.5.1",
    "pdf-parse": "^1.1.1",
    "mammoth": "^1.6.0",
    "docx": "^8.2.2",
    "xlsx": "^0.18.5",
    
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "@mui/material": "^5.14.5",
    "@mui/icons-material": "^5.14.3",
    "@mui/x-data-grid": "^6.10.1",
    "@mui/x-charts": "^6.0.0-alpha.0",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    
    "recharts": "^2.8.0",
    "date-fns": "^2.30.0",
    "lodash": "^4.17.21",
    "classnames": "^2.3.2",
    
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.2",
    "canvas": "^2.11.2",
    "jimp": "^0.22.10"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.33.2",
    "prettier": "^3.1.0",
    "@types/node": "^20.9.0",
    "concurrently": "^8.2.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "babel-loader": "^9.1.3",
    "@babel/core": "^7.22.9",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-env": "^7.22.9",
    "html-webpack-plugin": "^5.5.3",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bookaistudio/ai-automation-platform.git"
  },
  "bugs": {
    "url": "https://github.com/bookaistudio/ai-automation-platform/issues"
  },
  "homepage": "https://github.com/bookaistudio/ai-automation-platform#readme",
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended",
      "plugin:react/recommended",
      "prettier"
    ],
    "env": {
      "node": true,
      "browser": true,
      "es2022": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "react/prop-types": "off"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100
  }
}

